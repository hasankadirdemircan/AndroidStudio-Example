        android:layout_height="250dp"></FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="#323235"
        android:layout_height="250dp"></FrameLayout>

</LinearLayout>